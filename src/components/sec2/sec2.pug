include ../text-gallery/text-gallery


mixin sec2
	-
		var page = 2;

	.sec2&attributes(attributes)
		+nav(page, true)
		+container().sec2__container
			.sec2__head
				+sec-title(navList[page - 1].name)
				h2.sec2__bottom-title.
					СОРЕВНУЙСЯ С ДРУЗЬЯМИ
			+text-gallery({version: 0, page: page - 1}).sec2__text-gallery
			.sec2__bottom
				.sec2__bottom-slider
					.sec2__slider-item
						img(src=img + 'sec2-slider-img.png')
						.sec2__slider-nav
							ul.sec2__slider-nav-list
								each item, index in [,,,]
									li(class=(index === 1 ? 'sec2__slider-nav-item_active' : '')).sec2__slider-nav-item
										a(href="").sec2__slider-nav-link
				.sec2__bottom-bg
					+clouds.sec2__bottom-clouds
				.ta-center
					+btn({href: ''})
		+clouds.sec2__clouds